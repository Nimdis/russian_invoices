:css
  #right_header {
    float: right;
    text-align: right;
    width: 200px;
    font-size: 8px;
  }
  .clearfix {
    clear: both;
    width: 100%;
    height: 1px;
  }
  #header {
    margin-top: 20px;
    font-weight: bold;
    font-size: 16px;
  }
  #top_details {
    margin-top: 7px;
    font-size: 11px;
  }
#document
  #right_header
    ПРИЛОЖЕНИЕ № 1
    %br
    к постановлению Правительства
    %br
    Российской Федерации
    %br
    от 26 декабря 2011 г. № 1137
  .clearfix
  #header
    СЧЕТ-ФАКТУРА №
    = @doc.invoice_number
    от
    = @doc.invoice_from_date
    %br
    ИСПРАВЛЕНИЕ №
    = @doc.correction_number
    от
    = @doc.correction_date
    
  #top_details
    %strong Продавец:
    = @doc.vendor_name
    %br
    %strong Адрес:
    = @doc.vendor_address
    %br
    %strong ИНН/КПП продавца:
    = "#{ @doc.vendor_inn }/#{ @doc.vendor_kpp }"
    %br
    %strong Грузоотправитель и его адрес:
    = @doc.shipper
    %br
    %strong Грузополучатель и его адрес:
    = @doc.consignee
    %br
    %strong К платежно-расчетному документу
    = @doc.to_the_payment_documents
    %br
    %strong Покупатель:
    = @doc.buyer_name
    %br
    %strong Адрес:
    = @doc.buyer_address
    %br
    %strong ИНН/КПП покупателя:
    = "#{ @doc.buyer_inn }/#{ @doc.buyer_kpp } "
    %br
    %strong Валюта: наименование, код:
    = "#{ @doc.currency_name }, #{ @doc.currency_code }"
